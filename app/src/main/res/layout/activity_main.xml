<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/lavender">

    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Counter"
        android:textSize="50sp"
        android:textColor="@color/indigo"
        android:layout_margin="30dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal"/>


    <LinearLayout
        android:id="@+id/horizontal_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:layout_marginHorizontal="5dp"
            android:padding="5dp"
            android:textColor="@color/indigo"/>

        <TextView
            android:id="@+id/num_s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:layout_marginHorizontal="5dp"
            android:padding="5dp"
            android:textColor="@color/lavender"
            android:background="@color/indigo"/>

        <Button
            android:id="@+id/count_s1"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Increment ++"
            android:layout_marginHorizontal="5dp"
            />

        <Button
            android:id="@+id/reset_s1"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="Decrement --"
            android:layout_marginHorizontal="5dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/horizontal_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:layout_marginHorizontal="5dp"
            android:padding="5dp"
            android:textColor="@color/indigo"/>

        <TextView
            android:id="@+id/num_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:textColor="@color/lavender"
            android:background="@color/indigo"/>

        <Button
            android:id="@+id/count_m"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Increment ++"
            android:layout_marginHorizontal="5dp"
            />

        <Button
            android:id="@+id/reset_m"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="Decrement --"
            android:layout_marginHorizontal="5dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/horizontal_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:layout_marginHorizontal="5dp"
            android:padding="5dp"
            android:textColor="@color/indigo"/>

        <TextView
            android:id="@+id/num_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:layout_marginHorizontal="5dp"
            android:padding="5dp"
            android:textColor="@color/lavender"
            android:background="@color/indigo"/>

        <Button
            android:id="@+id/count_s2"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Increment ++"
            android:layout_marginHorizontal="5dp"
            />

        <Button
            android:id="@+id/reset_s2"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="Decrement --"
            android:layout_marginHorizontal="5dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="200sp"
        android:textColor="@color/indigo"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="Count" />

    <Button
        android:id="@+id/reset"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Reset"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>